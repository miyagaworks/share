      processingTime: Date.now() - startTime,
    };

    logger.debug('âœ… Dashboard APIå®Œäº† - å‡¦ç†æ™‚é–“:', Date.now() - startTime, 'ms');
    return NextResponse.json(response);
  } catch (error: any) {
    logger.error('âŒ Dashboard API ã‚¨ãƒ©ãƒ¼:', error);
    return NextResponse.json(
      {
